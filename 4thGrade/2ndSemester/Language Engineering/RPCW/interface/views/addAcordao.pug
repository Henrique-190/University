extends layout 
block content 
    .w3-card-4
        header.w3-container.w3-teal
          h1 Base de Dados de Acordãos | Adicionar Acordão

        form.w3-container(method="POST")
            label.w3-text-teal.w3-left-align Processo
            input.w3-input.w3-border.w3-round(name="processo", type="text" required)
            
            label.w3-text-teal.w3-left-align Tribunal
            select.w3-select.w3-white.w3-border(name="tribunal" required)
                option(value="" disabled selected) Escolha o Tribunal
                option(value="atco1") Atco1
                option(value="jtcampca") Jtcampca
                option(value="jdgpj") Jdgpj
                option(value="jtrp") Jtrp
                option(value="jtrg") Jtrg
                option(value="jtcampct") Jtcampct
                option(value="jtre") Jtre
                option(value="jcon") Jcon
                option(value="jtrc") Jtrc
                option(value="jsta") Jsta
                option(value="jtca") Jtca
                option(value="jtrl") Jtrl
                option(value="jtcn") Jtcn
                option(value="jstj") Jstj

            label.w3-text-teal.w3-left-align Url
            input.w3-input.w3-border.w3-round(name="url", type="text")

            label.w3-text-teal.w3-left-align Relator
            input.w3-input.w3-border.w3-round(name="relator", type="text" required)
            
            label.w3-text-teal.w3-left-align Texto Integral
            textarea.w3-textarea.w3-border.w3-round(name="decisaoTextoIntegral" style="width: 100%; min-width: 100%; height: 150px" required)

            label.w3-text-teal.w3-left-align Descritores
            input.w3-input.w3-border.w3-round(name="descritores", type="text")

            label.w3-text-teal.w3-left-align Data do Acórdão
            input.w3-input.w3-border.w3-round(name="dataAcordao", type="date" required)

            label.w3-text-teal.w3-left-align Votação
            input.w3-input.w3-border.w3-round(name="votacao", type="text")

            label.w3-text-teal.w3-left-align Decisão
            input.w3-input.w3-border.w3-round(name="decisao", type="text" required)

            label.w3-text-teal.w3-left-align Área Temática
            input.w3-input.w3-border.w3-round(name="area1", type="text")

            label.w3-text-teal.w3-left-align Sumário
            textarea.w3-textarea.w3-border.w3-round(name="sumario" style="width: 100%; min-width: 100%; height: 150px" required)

            button.w3-btn.w3-teal.w3-mb-2.w3-margin-top(type="submit") Adicionar
               
        footer.w3-container.w3-purple
            h5 Generated by GCF & HJFA in #{d} - [#[a(href="/") Página Principals]]