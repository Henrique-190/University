extends layout 
block content 
    .w3-card-4
        header.w3-container.w3-teal
          h1 Base de Dados de Acordãos | Editar Perfil

        form.w3-container(method="POST")
            label Id Telegram
            input.w3-input.w3-round(type="text" name="idTelegram" value=dados.idTelegram)
            fieldset
                legend Filiação
                label Estudante
                input.w3-input.w3-round(type="radio" name="filiacao" id="est" value="estudante")
                label Docente
                input.w3-input.w3-round(type="radio" name="filiacao" id="doc" value="docente")
                label Outro
                input.w3-input.w3-round(type="radio" name="filiacao" id="out" value="outro")                               
            
            button.w3-btn.w3-teal.w3-mb-2(type="submit") Editar
               
        footer.w3-container.w3-purple
            h5 Generated by GCF & HJFA in #{d} - #[a(href="/") Página Principal]
        script(type="text/javascript").
            window.addEventListener('load', function() {
                var filiacao = '#{dados.filiacao}' 
                if (filiacao == "estudante")
                    $("#est").prop("checked", true);
                else if(filiacao == "docente")
                    $("#doc").prop("checked", true);
                else 
                    $("#out").prop("checked",true);
            })
        