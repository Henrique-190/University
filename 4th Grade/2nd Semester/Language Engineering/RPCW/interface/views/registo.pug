extends layout 
block content 
    .w3-card-4
        header.w3-container.w3-teal
          h1 Base de Dados de Acordãos | Página de Registo

        form.w3-container(method="POST" onsubmit="matchPassword(event)")
            label Username
            input.w3-input.w3-round(type="text" name="username" required)
            label Password
            input.w3-input.w3-round(type="password" name="password" id="pwd1" required)
            label Repita a Password
            input.w3-input.w3-round(type="password" id="pwd2" required)
            label Id Telegram
            input.w3-input.w3-round(type="text" name="idTelegram")
            input(type="hidden" name="nivel" value="user")
            fieldset
                legend Filiação
                label Estudante
                input.w3-input.w3-round(type="radio" name="filiacao" value="estudante" checked)
                label Docente
                input.w3-input.w3-round(type="radio" name="filiacao" value="docente")
                label Outro
                input.w3-input.w3-round(type="radio" name="filiacao" value="outro")                               
            
            button.w3-btn.w3-teal.w3-mb-2(type="submit") Registar
               
        footer.w3-container.w3-purple
            h5 Generated by GCF & HJFA in #{d} - [#[a(href="/login") Página Inicial]]
        script(type="text/javascript").
            window.addEventListener('load', function() {
                if ('#{error}' !== ''){
                    alert('#{error}')
                }
            })