extends layout

block content
  .modal(id="fav")
  .w3-card-4
    header.w3-container.w3-teal
      h1 #{acordao.tribunal} | Página do Acordão #{acordao._id} |  
        if fav
          a.w3-btn.w3-text-yellow(href="/user/favoritos/unfav/"+acordao._id+"?tribunal="+acordao.tribunal) &#9733;
        else 
          button.w3-btn.w3-text-gray(onclick="showFav('"+acordao._id+"','"+acordao.tribunal+"')") &#9733; 
        form.w3-right(action="/acordaos/deleteAcordao" method="POST")
          input(type="hidden" name="_id" value=acordao._id)
          input(type="hidden" name="tribunal" value=acordao.tribunal)
          button.w3-teal.w3-text-red.w3-button.w3-hover-teal(type="submit") &#128465;

    // FALTAM OS RESTANTES CAMPOS DEFAULT
    form.w3-container(action="/sugestoes/add" id="sugestao" method="POST")
      input(type="hidden" name="_id" value=acordao._id)
      input(type="hidden" name="tribunal" value=acordao.tribunal)
      ul.w3-ul.w3-card-4(id="list")
        for val,key in acordao            
          if key != "_id" && key != "tribunal"
            label #[b #{key}:] #[.w3-btn.w3-teal.w3-small.w3-right(onclick="alteraCampo('"+val+"','"+key+"')" id=key+"E") Editar]
            if key == "Descritores"
              li(id=key)
                ul.w3-ul
                  for descritor in val
                    li #{descritor}
            else
              li(id=key) #{val}

      button.w3-btn.w3-teal.w3-mb-2.w3-disabled(type="submit" id="submit" disabled) Sugerir Alteração

    footer.w3-container.w3-teal
      h5 Generated by GCF & HJFA in #{d} #[a.w3-right(href="/") Página Principal]
      