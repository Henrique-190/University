extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Base de Dados de Acordãos | Página de Sugestões
    .w3-container
      table.w3-table-all
        tr 
          th ID
          th ID Acordão
          th Data de Criação 
          th Estado
          th Data de Decisão
        each sugestao in sugestoes
          tr
            td #[a.w3-btn(href="/sugestoes/"+sugestao.id) #{sugestao.id}]
            td=sugestao.id_acordao
            td=sugestao.dataCriacao
            td=sugestao.estado
            td=sugestao.dataDecisao

    footer.w3-container.w3-teal
      h5 Generated by GCF & HJFA in #{d} #[a.w3-btn.w3-gray.w3-right(href="/") Página Principal]
    script(type="text/javascript").
      window.addEventListener('load', function() {
          if ('#{message}' !== ''){
              alert('#{message}')
          }
      })