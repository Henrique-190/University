extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Base de Dados de Acordãos | Olá #{user} | Página de Favoritos

    .w3-container
      table.w3-table-all
        tr
          th Id
          th Descrição
          th Tribunal
        each fav in favoritos
          tr
            td #[a.w3-btn(href="/acordaos/"+fav.idAcordao+"?tribunal="+fav.tribunal) #{fav.idAcordao}]
            td=fav.descricao
            td=fav.tribunal

    footer.w3-container.w3-teal
      h5 Generated by GCF & HJFA in #{d} #[a(href="/") Página Principal]