extends layout

block content
  .modal(id="esqueci")
  .w3-card-4
    header.w3-container.w3-teal
      h1 Base de Dados de Acord√£os 
    form.w3-container.w3-margin(method="POST")
            label #[b Username]
            input.w3-input.w3-round(id="user" type="text" name="username" required)
            label #[b Password]
            input.w3-input.w3-round(type="password" name="password" required)
                    
            button.w3-btn.w3-purple.w3-block.w3-margin-top(type="submit") Login
              
    div.w3-row-padding.w3-margin
      .w3-half #[a.w3-btn.w3-green.w3-block(href="/registo") Registar] 
      .w3-right.w3-margin-right.w3-btn(onclick="showEsqueci()") Esqueci-me da password
    footer.w3-container.w3-teal
      h5 Generated by GCF & HJFA in #{d}
    script(type="text/javascript").
      window.addEventListener('load', function() {
          if ('#{error}' !== ''){
              alert('#{error}')
          }
          else if ('#{otp}' !== ''){
            if ('#{otp}' == 'true'){
              alert("Password alterada com sucesso!")
            }
            else if('#{otp}' == 'none'){
              alert("Erro no envio do OTP!")
            }else{
              alert("Erro a alterar password!")
            }    
          }  
      })